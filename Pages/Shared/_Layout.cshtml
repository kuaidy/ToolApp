@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Components.Web;
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options

@inject IViewLocalizer ViewLocalizer;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ToolApp</title>
    <base href="~/" />

    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/jsoneditor/jsoneditor.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/MarkDown/css/editormd.css" rel="stylesheet" />
    <link href="~/lib/MarkDown/css/editormd.preview.css" rel="stylesheet" />

    <script src="~/lib/jsoneditor/jsoneditor.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/MyIndexDB.js" asp-append-version="true"></script>

    <script src="~/lib/qrcode/qrcode.min.js"></script>
    <!-- 导入样式 -->
    <link rel="stylesheet" href="https://unpkg.com/element-plus/dist/index.css" />
    <!-- 导入 Vue 3 -->
@* <script src="//unpkg.com/vue@3"></script> *@
    <!-- 导入组件库 -->
@* <script src="https://unpkg.com/element-plus"></script> *@
@* <script src="https://unpkg.com/axios/dist/axios.min.js"></script> *@
    <!-- 导入组件库 -->
    <link href="~/lib/github-markdown-css/github-markdown-light.css" rel="stylesheet" type="text/css" />
    <link href="ToolApp.styles.css" rel="stylesheet" />
    <!--阿里图标 -->
    <script src="//at.alicdn.com/t/c/font_2344911_462ux66iuo.js"></script>
    <!--有些js会有冲突导致报错，无法加载组件，可在页面单独处理-->
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />

    <script type="text/javascript">
        (function (c, l, a, r, i, t, y) {
            c[a] = c[a] || function () { (c[a].q = c[a].q || []).push(arguments) };
            t = l.createElement(r); t.async = 1; t.src = "https://www.clarity.ms/tag/" + i;
            y = l.getElementsByTagName(r)[0]; y.parentNode.insertBefore(t, y);
        })(window, document, "clarity", "script", "nxehgneoa1");
