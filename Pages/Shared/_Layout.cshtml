</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">ToolApp</a>
                @await Html.PartialAsync("_SelectLanguagePartial")
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <div id="components-reconnect-modal" style="display:none;"></div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy;2021 - ToolApp - <a href="/Weiapp">@ViewLocalizer["MiniProgram"]</a> - <a href="/About">@ViewLocalizer["About"]</a> - <a href="/Donation">@ViewLocalizer["Donation"]</a>
        </div>
    </footer>
</body>
<script src="_content/Microsoft.FluentUI.AspNetCore.Components/Microsoft.FluentUI.AspNetCore.Components.lib.module.js" type="module" async></script>
